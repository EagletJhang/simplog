ROOT=/path/to/your/website/root

all: index tag rss articles

index:
	node process_index.js $(ROOT)
	
tag:
	node process_tag.js $(ROOT)

rss:
	node process_rss.js $(ROOT)

articles:
	node process_articles.js $(ROOT)

clean:
	rm -f $(ROOT)/index.html
	rm -f $(ROOT)/tag.html
	rm -f $(ROOT)/articles/*.html
	rm -f $(ROOT)/pages/*.html
	rm -f $(ROOT)/categories/*.html
